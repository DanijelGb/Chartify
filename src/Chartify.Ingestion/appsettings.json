{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/chartify-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ]
  },
  "ChartifySettings": {
    "SpotifyAuthPath": "./spotify-auth.json",
    "ChartDownloadUrl": "https://charts.spotify.com/charts/view/regional-global-daily/latest",
    "MaxEntriesPerChart": 100
  },
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=chartify;Username=postgres;Password=postgres"
  }
}